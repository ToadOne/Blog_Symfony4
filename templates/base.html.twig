<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CanadianMaple{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/simplex/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top ">
        <a class="navbar-brand" href="{{ path('page_accueil') }}">CanadianMaple</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
          <div class="collapse navbar-collapse" id="navbarColor01">

                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'page_accueil' %}nav-link active{% endif %}" href="{{ path('page_accueil') }}">Accueil <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'blog' %}nav-link active{% endif %}" href="{{ path('blog') }}">Blog</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link {% if app.request.attributes.get('_route') == 'blog_new' %}nav-link active{% endif %}" href="{{ path('blog_new') }}">Ajouter un article</a>   
                                </li>
                            {% endif %}
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'about' %}nav-link active{% endif %}" href="#">A propos</a>
                            </li>
                            {% if not app.user %}
                                <li class="nav-item">
                                    <a class="nav-link {% if app.request.attributes.get('_route') == 'security_login' %}nav-link active{% endif %}" href="{{ path('security_login') }}">Connexion</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {% if app.request.attributes.get('_route') == 'security_registration' %}nav-link active{% endif %}" href="{{ path('security_registration') }}">Inscription</a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link {% if app.request.attributes.get('_route') == 'security_logout' %}nav-link active{% endif %}" href="{{ path('security_logout') }}">Deconnexion</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {% if app.request.attributes.get('_route') == 'user_profil' %}nav-link active{% endif %}" href="{{ path('user_profil') }}"> Bienvenue {{app.user.username}}</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
        </nav><br><br><br><br>
        <style>
            .container{ 
                background-color: #ffe0b5;
                }
            h1{ text-align: center;}
            
        </style>

    <div class="container">
        {% block body %}{% endblock %}
    </div>
        
     {% block javascripts %}{% endblock %}
    </body>

</html>
